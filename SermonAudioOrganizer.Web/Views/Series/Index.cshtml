@model IEnumerable<SermonAudioOrganizer.Domain.Series>

@{
    ViewBag.Title = "Series List";
}

<h2>Series List</h2>

@if (User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var series in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => series.Title)
        </td>
        <td>
            @Html.ActionLink("Sermons", "Index", "Sermon", new { seriesId = series.Id }, null)
            @if (User.IsInRole("admin"))
            {
                @:|
                @Html.ActionLink("Edit", "Edit", new { id = series.Id }) @:|
                @Html.ActionLink("Delete", "Delete", new { id = series.Id })
            }
        </td>
    </tr>
}

</table>
