@model SermonAudioOrganizer.Models.AddMediaViewModel

@{
    ViewBag.Title = "Add Media to Sermon";
}

<h2>Add Media to Sermon</h2>

<div>
    @if (Model.AllMediaList.Count > 0)
    {
        <table>
            <tr>
                <th>Name
                </th>
                <th>Type
                </th>
                <th></th>
            </tr>

            @foreach (var media in Model.AllMediaList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => media.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => media.Type)
                    </td>
                    <td>
                        @Html.ActionLink("Add to Sermon", "AddMediaConfirm", new { sermonId = Model.SermonId, mediaId = media.Id }, null)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <table>
            <tr>
                <th>No media found
                </th>
            </tr>
        </table>
    }
</div>



<div>
    @Html.ActionLink("Back to Sermon", "Edit", new { sermonId = Model.SermonId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
