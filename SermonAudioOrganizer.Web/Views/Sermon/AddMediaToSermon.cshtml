@model SermonAudioOrganizer.Models.AddMediaViewModel

@{
    ViewBag.Title = "AddMediaToSermon";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Are you sure you want to add this media to the sermon?</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SermonId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SermonId)
            @Html.ValidationMessageFor(model => model.SermonId)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Sermon", "Edit")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
